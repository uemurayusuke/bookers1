
<h1>Books</h1>

<table>
  <thead>
      <th>Title</th>
  <th>Body</th>
  </thead>

<tbody>
<% @books.each do |list| %>
<tr>
  <td>%= list.title %></td>
  <td><%= list.body %></td>
</tr>
<% end %>
</tbody>
</table>


<h1>New book</h1>

<%= form_with model: @book, url: '/books', method: :post do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>

